<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.crproject.cr"
	version 	= "0.0.3">

	<name>CR</name>

	<description>
		Beta 0.0.3
	</description>

	<author href="http://i-solucions.com"
		email="miquelpin@gmail.com">
		Miguel Pin 
	</author>

<icon src="assets/icons/icon.png" width="57" height="57"  gap:role="default"/>
<icon src="assets/icons/icon-72.png" gap:platform="ios" width="72" height="72" />
<icon src="assets/icons/icon_at_2x.png" gap:platform="ios" width="114" height="114" />

<icon src="assets/icons/icon.png" gap:platform="android" gap:density="ldpi" />
<icon src="assets/icons/icon-72.png" gap:platform="android" gap:density="mdpi" />
<icon src="assets/icons/icon_at_2x.png" gap:platform="android" gap:density="hdpi" />

<icon src="assets/icons/icon.png" gap:platform="winphone" />
<icon src="assets/icons/winphone/tileicon.png" gap:platform="winphone" gap:role="background" />


<gap:splash src="assets/splash/ios/Default.png" width="320" height="480" gap:platform="ios"  />
<gap:splash src="assets/splash/ios/Default_at_2x.png" width="640" height="960" gap:platform="ios" />
<gap:splash src="assets/splash/ios/Default-Landscape.png" width="1024" height="768" gap:platform="ios" />
<gap:splash src="assets/splash/ios/Default-Portrait.png" width="768" height="1024" gap:platform="ios" />

<gap:splash src="assets/splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="assets/splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="assets/splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" />


<gap:splash src="splash/android/ldpi.png" gap:platform="blackberry" />
<icon src="assets/icons/icon.png" width="57" height="57" gap:platform="blackberry" gap:role="default"/>
<gap:splash src="splash/winphone/splash.jpg" gap:platform="winphone" />

<preference name="stay-in-webview" value="true" />
<preference name="prerendered-icon" value="true" />
<preference name="android-minSdkVersion" value="10" />
<preference name="android-maxSdkVersion" value="15" />

<preference name="target-device" value="handset" />
<preference name="phonegap-version" value="1.9.0" />

<preference name="fullscreen" value="true" />
<preference name="webviewbounce" value="false" />
<preference name="ios-statusbarstyle" value="black-opaque" />


<access origin="http://cr.i-solucions.com" subdomains="true"/>
<access origin="http://pro1.i-solucions.com" subdomains="true"/>
<access origin="http://youtu.be" subdomains="true"/>
<access origin="http://phonegap.com" subdomains="true" />
<access origin="http://flickr.com" subdomains="true" />
<access origin="http://youtube.com" subdomains="true" />
<access origin="http://facebook.com" subdomains="true" />

<feature name="http://api.phonegap.com/1.0/battery"/>
<feature name="http://api.phonegap.com/1.0/camera"/>
<feature name="http://api.phonegap.com/1.0/contacts"/>
<feature name="http://api.phonegap.com/1.0/file"/>
<feature name="http://api.phonegap.com/1.0/geolocation"/>
<feature name="http://api.phonegap.com/1.0/media"/>
<feature name="http://api.phonegap.com/1.0/network"/>
<feature name="http://api.phonegap.com/1.0/notification"/>
<feature name="http://api.phonegap.com/1.0/device"/>

<preference name="orientation" value="portrait" />
</widget>
